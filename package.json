{
    "name": "verbum",
    "version": "3.1.1",
    "description": "App to control text in church",
    "main": "app/main/main.js",
    "author": "Mateusz Kowalski",
    "license": "MIT",
    "scripts": {
        "start": "npx electron .",
        "build": "electron-builder"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Druidman/Serafin.git"
    },
    "bugs": {
        "url": "https://github.com/Druidman/Serafin/issues"
    },
    "homepage": "https://github.com/Druidman/Serafin#readme",
    "devDependencies": {
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8"
    },
    "dependencies": {
        "sortablejs": "^1.15.6",
        "sqlite3": "^5.1.7"
    },
    "build": {
        "appId": "com.mateusz.verbum",
        "productName": "Verbum",
        "directories": {
            "output": "dist"
        },
        "files": [
            "app/**/*",
            "package.json",
            "db/**/*",
            "Songs.db"
        ],
        "linux": {
            "target": [
                "AppImage"
            ]
        },
        "win": {
            "target": [
                "nsis"
            ]
        }
    }
}
